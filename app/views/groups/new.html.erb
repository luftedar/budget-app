<%= render 'devise/shared/header' %>

<div class="login-form">
  <%= form_with model: @group, method: :post, local: true do |form| %>
      <div class="field">
        <%= form.label :name, "Name" %><br>
        <%= form.text_field :name, placeholder: "Category Name", required: true, class: "input-field" %>
      </div>

      <div class="field">
        <%= form.label :icon, "Icon" %><br>
        <%= form.url_field :icon, placeholder: "Icon link", required: true, class: "input-field" %>
      </div>

      <div class="actions">
        <%= form.submit "Save", class: "action-button" %>
      </div>
  <% end %>
</div>