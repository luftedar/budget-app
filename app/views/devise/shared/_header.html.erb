<div class="navbar">
  <% if current_page?('/users/sign_in') %>
    <h1 class="navbar-header">Log in</h1>
  <% elsif current_page?('/users/sign_up') %>
    <h1 class="navbar-header">Sign up</h1>
  <% elsif current_page?('/') %>
    <h1>Home</h1>
  <% else %> 
    <%= link_to root_path, class: "previous round" do %>
      <p class="previous round">&#8249;</p>
    <% end %>
  <% end %>
  <% if user_signed_in? %>
    <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "sign-out" %>
  <% end %>
</div>
